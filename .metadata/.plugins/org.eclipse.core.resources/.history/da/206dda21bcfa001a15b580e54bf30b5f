	//Conectarse a Servidor
	if (crear_conexion(ip-server,puerto-server)==-1){
							log_error(logSindicato, "No se pudo establecer conexi贸n con servidor");
	} else {
	int conexion_sindicato = crear_conexion(
								config_get_string_value(configSindicato, "IP"),
								config_get_int_value(configSindicato, "PUERTO_ESCUCHA")
							);
	log_trace(logSindicato, "Se estableci贸 conexi贸n con servidor");
	}

}


